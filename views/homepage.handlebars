<main>
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <!-- Post preview-->

                <div class="post-preview">
                    {{#if loggedIn}}
                    {{#each blogs}}

                    <a href="singlePost/{{id}}">
                        <h2 class="post-title">{{title}}</h2>
                    </a>

                    {{blog_details}}

                    <p class="post-meta">
                        Posted by {{user.username}}

                        on {{format_date created_at}}
                    </p>
                    {{#each comments}}
                    Comments:

                    <li> {{comment_text}} By {{user.username}} On {{ format_date createdAt}}</li>
                    {{/each}}

                    <p><a href="singlePost/{{id}}"> Add comment</a></p>

                    <hr class="my-4" />
                    {{/each}}
                    {{/if}}
                </div>



                <div class="post-preview">
                    {{#unless loggedIn}}
                    {{#each blogs}}

                    <h2 class="post-title">{{title}}</h2>

                    <p class="post-meta">
                        Posted by {{user.username}}

                        on {{format_date created_at}}
                    </p>

                    

                    <hr class="my-4" />
                    {{/each}}
                    <p><a href="/login">Please sign in see blog details and comments</a></p>
                    {{/unless}}
                </div>



            </div>
        </div>
    </div>



</main> <!-- Bootstrap core JS-->